<%= form_for([:admin, @post]) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :content %>
      <%= f.text_field :content %>
    </div>
    <div class="field">
      <%= f.submit %>
    </div>
<% end %>